<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <View
        android:id="@+id/itemMisiBerlangsungGreen"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/card_red"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivMisi"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_image_24" />

    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+90 points"
        android:fontFamily="@font/gabarito_medium"
        android:textColor="#FEFAE0"
        android:textSize="20sp"
        android:translationZ="12dp"
        app:layout_constraintEnd_toEndOf="@+id/ivMisi"
        app:layout_constraintStart_toStartOf="@+id/ivMisi"
        app:layout_constraintTop_toBottomOf="@+id/ivMisi" />

    <TextView
        android:id="@+id/tvMisiTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="194dp"
        android:layout_marginEnd="16dp"
        android:text="Memindai 3 sampah daun kering"
        android:translationZ="12sp"
        android:fontFamily="@font/gabarito_medium"
        android:textColor="#FEFAE0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivMisi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivMisi"
        app:layout_constraintTop_toTopOf="@+id/ivMisi" />

    <Button
        android:id="@+id/btnMulaiMisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="194dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="lanjutkan"
        android:textSize="18sp"
        android:textColor="#3A3128"
        android:fontFamily="@font/gabarito_bold"
        android:backgroundTint="#F6CF0F"
        android:textAllCaps="false"
        android:translationZ="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvMisiTitle"
        app:layout_constraintStart_toStartOf="@+id/tvMisiTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvMisiTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>